@using MVCBase.ViewModels
@model P0030ViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>P0030.Update</title>
    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/P0030/CheckSubmitUpdate.js?20160921"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
</head>
<body style="background-color:#e8fcfc">
    P0030.Update 修改 | CRUD 作業 (以Html Helper整合jQuery.Valicaion.unobtrusive)
    <hr />
    <div style="background-color:#f6f6e5;">
        @Html.ActionLink("多筆清單", "", "P0030") <br />
        <br />

        @using (Html.BeginForm("SubmitUpdate", "P0030", new { @id = Model.ms1 }, FormMethod.Post, new { id = "form1" }))
        {
            @Html.AntiForgeryToken()
            @Html.LabelFor(m => m.ms1)
            @Html.Raw(" = ")
            @Model.ms1
            @Html.HiddenFor(m => m.ms1)
            @Html.ValidationMessageFor(m => m.ms1)
            <br />
            @Html.LabelFor(m => m.ms2)
            @Html.Raw(" = ")
            @Html.TextBoxFor(m => m.ms2)
            @Html.ValidationMessageFor(m => m.ms2)
            <br />
            @Html.LabelFor(m => m.mi1)
            @Html.Raw(" = ")
            @Html.TextBoxFor(m => m.mi1)
            @Html.ValidationMessageFor(m => m.mi1)
            <br />
            @Html.LabelFor(m => m.mi2)
            @Html.Raw(" = ")
            @Html.TextBoxFor(m => m.mi2)
            @Html.ValidationMessageFor(m => m.mi2)
            <br />
            @Html.Raw("總分 = ")
            @Model.miSum
            <br />
            @Html.Raw("平均 = ")
            <span style="color:@Model.msColor">@Model.mi1Extra</span> <br />
            <br />
            @Html.Raw("若平均低於60分, 則為紅色, 否則為綠色.")
            <br />
            <br />
            <input type="submit" name="btnSubmit" value="修改" />
            <input type="reset" name="reset" value="重填" />
            <br />
            <br />
            @Html.ValidationSummary(false, "錯誤清單")
        }
    </div>
    <br />
    <hr />
    <a href="http://www.luckstar.com.tw">LuckStar Computer Inc.</a> | 執行時間=@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss.fff")
    

</body>
</html>
